{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch main",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/relayer/cmd/relayer",
      "args": [
        "start",
        "--debug"
      ]
    },
    {
      "name": "Launch go",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${fileDirname}",
      "args": []
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha all",
      "program": "${workspaceFolder}/test/client/node_modules/mocha/bin/mocha",
      "args": [
        "./test/*.spec.ts",
        "--require",
        "ts-node/register",
        "--timeout",
        "999999",
        "--colors",
        "--resolveJsonModule"
      ],
      "cwd": "${workspaceFolder}/test/client/",
      "console": "integratedTerminal"
    }
  ]
}